source "https://rubygems.org"

gemspec path: ".."

gem "activerecord", "~> 4.2.0"
gem "bigdecimal", "~> 1.4.2" if RUBY_VERSION >= "2.6"

platform :mri do
  gem "pg",      "~> 0.20.0"
  gem "mysql2",  "~> 0.5"
  gem "sqlite3", "~> 1.3.6"
end

platform :jruby do
  gem "activerecord-jdbc-adapter", "~> 1.3"
  gem "jdbc-sqlite3"
  gem "jdbc-mysql"
  gem "jdbc-postgres"
end

gem "rake", "~> 12.0"
